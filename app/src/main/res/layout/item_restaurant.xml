    <TextView
        android:id="@+id/restaurant_item_name"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Foo's Bar" />

    <TextView
        android:id="@+id/restaurant_item_city_divider_11"
        style="@style/AppTheme.TextDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@id/restaurant_item_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/restaurant_item_name_1"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:textColor="@color/browser_actions_bg_grey"
        android:layout_toRightOf="@id/restaurant_item_city_divider_11"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Foo's Bar" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/restaurant_item_rating"
        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/restaurant_item_name"
        android:layout_below="@+id/restaurant_item_name"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/quantity"
        style="@style/AppTheme.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_item_rating"
        android:layout_alignTop="@+id/restaurant_item_rating"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/restaurant_item_rating"
        android:gravity="center_vertical"
        android:textColor="@color/greyDisabled"
        tools:text="Quantity : " />

    <TextView
        android:id="@+id/num_of_items"
        style="@style/AppTheme.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_item_rating"
        android:layout_alignTop="@+id/restaurant_item_rating"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/quantity"
        android:gravity="center_vertical"
        android:textColor="@color/greyDisabled"
        tools:text="(10)" />

<!--    <TextView-->
<!--        android:id="@+id/restaurant_item_num_ratings"-->
<!--        style="@style/AppTheme.Caption"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignBottom="@+id/restaurant_item_rating"-->
<!--        android:layout_alignTop="@+id/restaurant_item_rating"-->
<!--        android:layout_marginLeft="4dp"-->
<!--        android:layout_toRightOf="@+id/num_of_items"-->
<!--        android:gravity="center_vertical"-->
<!--        android:textColor="@color/greyDisabled"-->
<!--        tools:text="(10)" />-->



    <TextView
        android:id="@+id/restaurant_item_category"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/restaurant_item_name"
        android:layout_below="@+id/restaurant_item_rating"
        android:textColor="@color/greySecondary"
        tools:text="Italian" />

    <TextView
        android:id="@+id/restaurant_item_city_divider"
        style="@style/AppTheme.TextDivider"
        android:layout_alignTop="@+id/restaurant_item_category"
        android:layout_toRightOf="@+id/restaurant_item_category"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/restaurant_item_city"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/restaurant_item_category"
        android:layout_toRightOf="@+id/restaurant_item_city_divider"
        android:textColor="@color/greySecondary"
        tools:text="San Francisco" />

    <TextView
        android:id="@+id/restaurant_item_city_divider_1"
        style="@style/AppTheme.TextDivider"
        android:layout_alignTop="@+id/restaurant_item_category"
        android:layout_toRightOf="@+id/restaurant_item_city"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/restaurant_item_city_1"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/restaurant_item_category"
        android:layout_toRightOf="@+id/restaurant_item_city_divider_1"
        android:textColor="@color/greySecondary"
        android:text="Quantity : "
        tools:text="Quantity : " />

    <TextView
        android:id="@+id/restaurant_item_category_1"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/restaurant_item_category"
        android:layout_toRightOf="@+id/restaurant_item_city_1"
        android:textColor="@color/greySecondary"
        android:text=""
        tools:text="" />

    <Button
        android:id="@+id/delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/restaurant_item_price"
        android:text="Delete" />

    <TextView
        android:id="@+id/restaurant_item_price"
        style="@style/AppTheme.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/greySecondary"
        tools:text="$$$" />

</RelativeLayout>
