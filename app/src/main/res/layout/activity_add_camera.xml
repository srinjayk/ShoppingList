<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:padding="20dp"
tools:context=".AddCameraActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/extracted_text_1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/browser_actions_title_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/restaurant_button_back_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/browser_actions_title_color"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_close_white_24px" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_add_white_24px" />

        <TextView
            android:id="@+id/textView_1"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

</ScrollView>

    <LinearLayout
        android:id="@+id/extracted_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/add_data_from_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT IMAGE FROM STORAGE"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

<LinearLayout
    android:id="@+id/extracted_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/checkText_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check the text" />

    <Button
        android:id="@+id/adddataOCR_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD" />

</LinearLayout>

</RelativeLayout>